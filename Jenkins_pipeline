pipeline {
    agent any
    stages {
        stage('Clone Repositry & clean') {
            steps {
                sh 'git clone https://github.com/sunilmaury/Jenkins_pipeline.git'
                sh 'mvn clean -f Jenkins_pipeline'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -f Jenkins_pipeline'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package -f Jenkins_pipeline'
            }
        }
    }
}
